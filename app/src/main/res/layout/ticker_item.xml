<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ticker"
            type="com.example.stock.domain.Ticker" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray">

        <TextView
            android:id="@+id/tickerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@{ticker.name}"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TICKER" />

        <com.robinhood.ticker.TickerView
            android:id="@+id/tickerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@{String.valueOf(ticker.value)}"
            android:textAppearance="@style/TickerTextAppearance"
            app:layout_constraintEnd_toEndOf="@+id/tickerName"
            app:layout_constraintStart_toStartOf="@+id/tickerName"
            app:layout_constraintTop_toBottomOf="@+id/tickerName"
            app:ticker_animationDuration="1500"
            app:ticker_defaultCharacterList="number"
            app:ticker_defaultPreferredScrollingDirection="any" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>